<div class="inkylike-toolbar">
  <ul class="toolbar-actions pull-left">
    <li>
      {{#linkTo 'vcards.new'}}
        <i class="icon-plus icon-large"></i>
        添加联系人
      {{/linkTo}}
    </li>
  </ul>
</div>
<div class="content">
  <div class="left left-medium">
    <ul class="vcards">
      {{#each model}}
        <li>
          {{#linkTo 'vcard' this}}
            <div class="name"><i class="icon-user"></i> {{fullName}}</div>
          {{/linkTo}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="right">
    {{outlet}}
  </div>
</div>
