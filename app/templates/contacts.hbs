<div class="inkylike-toolbar">
  <ul class="toolbar-actions pull-left">
    <li>
      {{#linkTo 'contacts.new'}}
        <i class="icon-plus icon-large"></i>
        添加联系人
      {{/linkTo}}
    </li>
    <li>
      {{file-upload url='http://intimi-api.dev/v1/contacts/upload'}}
    </li>
  </ul>
</div>
<div class="content">
  <div class="left left-small">
    <ul class="contacts">
      {{#each model}}
        <li>
          {{#linkTo 'contact' this}}
            <div class="name"><i class="icon-user"></i> {{name.fullName}}</div>
          {{/linkTo}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="right">
    {{outlet}}
  </div>
</div>
