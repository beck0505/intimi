<form>
  <div class="legend">基本信息</div>
  <ul class="fields">
    <li>
      <div class="add-on">姓名</div>
      <div class="field">
        {{input type='text' value=fullName}}
        <button class="pull-right" {{action 'editNames'}}>+</button>
      </div>
    </li>
    <li>
      <div class="add-on">电话号码</div>
      <div class="field">
        {{input type='text' value=tel}}
        <button class="pull-right" {{action 'addTel'}}>+</button>
      </div>
    </li>
    <li>
      <div class="add-on">电子邮箱</div>
      <div class="field">
        {{input type='text' value=email}}
        <button class="pull-right" {{action 'addEmail'}}>+</button>
      </div>
    </li>
    <li>
      <div class="add-on">备注</div>
      <div class="field">
        {{input type='text' value=memo}}
      </div>
    </li>
    <li>
      <div class="add-on">分组</div>
      <div class="field">
        {{input type='text' value=group}}
      </div>
    </li>
  </ul>
</form>

<form>
  <div class="legend">更多选项</div>
  <ul class="fields">
    <li>
      <div class="add-on">工作地址</div>
      <div class="field">
        {{input type='text' value=address}}
        <button class="pull-right" {{action 'addAddress'}}>+</button>
      </div>
    </li>
    <li>
      <div class="add-on">传真号码</div>
      <div class="field">
        {{input type='text' value=fax}}
        <button class="pull-right" {{action 'addFax'}}>+</button>
      </div>
    </li>
    <li>
      <div class="add-on">头衔</div>
      <div class="field">
        {{input type='text' value=title}}
      </div>
    </li>
    <li>
      <div class="add-on">单位</div>
      <div class="field">
        {{input type='text' value=organization}}
      </div>
    </li>
  </ul>
</form>

{{partial 'vcards/edit_names_modal'}}
